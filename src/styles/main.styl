*
    padding 0
    margin 0

body
    font-size 17px
    font-family: 'Days One', sans-serif;
    background url("../img/background.jpg") no-repeat
    background-size cover
h1
    font-size 5rem
    color #fff
    margin-bottom 2rem !important
.nav
    width 100%
    display flex
    justify-content space-around
    align-items center
    
    &__item
        list-style none
        padding 1em .5em
        transition .3s all
        &:hover
            box-shadow 0 60px #fff inset
        &:hover a 
           color #1c907f
    &__link
        text-decoration none
        color #fff
        display block

.algoritmos
    width 100%
    text-align center
    
    h1
        margin 1.5em 0

    
    .algoritmo
        width 100%
        flex-wrap wrap
        &__item
            list-style none
            width 20%
            padding 1em
            border 1px solid #fff
            border-radius 5px
            margin 1.5em 0
            transition .2s all
            &:hover
                transform scale(1.1)
                background #53bb96
                box-shadow 0 0 15px rgba(#000,.2)
        &__link
            text-decoration none
            color #fff
            font-size 2em
            display block
            
@import "./includes/fifo/fifo.styl"